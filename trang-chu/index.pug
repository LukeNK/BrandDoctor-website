extend /layout/standard

append head
    link(rel="stylesheet", href="/asset/style/browser.css")
    link(rel="stylesheet", href="/asset/style/dropdown.css")

    style.
        #banner-whois {
            background-image:
                linear-gradient(to right, #00339950, #003399ff),
                url(/asset/image/51589.jpg);
            background-size: contain;
            background-position: left bottom;
            padding: 6rem var(--side-padding);
        }
        #banner-whois .desktop {
            flex-basis: 40rem;
        }
        #banner-whois p { color: #ffffff; }
        @media screen and (max-width: 60rem) {
            #banner-whois h1 { text-align: center; }
            #banner-whois .desktop {
                display: none;
            }
        }

        #members {
            display: flex;
            align-items: center;
            margin-top: var(--nav-height);
            background-color: var(--color-gray);
            padding-bottom: 3rem;
        }
        #members h1 {
            color: var(--color-theme);
        }
        #members > div {
            flex: 1rem 1 1;
            gap: 1rem;
            padding: 1rem;
            padding-bottom: var(--nav-height);
            text-align: center;
            order: 1;
        }
        #members > .members-logo {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: center;
        }
        #members > .members-logo > div {
            flex-basis: 5rem;
        }
        #members > .members-logo img {
            width: 100%;
        }
        @media screen and (max-width: 60rem) {
            #members {
                flex-direction: column;
            }
            #members > .members-logo {
                order: 2; /* logo after text */
            }
        }

        #projects {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: var(--flex-gap);
        }
        #projects > div {
            flex: 1 1 30%;
            display: flex;
            flex-direction: row;
            align-items: flex-end;
            justify-content: space-around;
            height: 10rem;
            padding: 1rem;
        }

        #opportunity > div {
            padding: 4rem;
            padding-left: var(--side-padding);
            background-color: var(--color-theme-light);
        }
        #opportunity > div > h1 {
            margin-top: 0;
            color: var(--color-light);
        }
        #opportunity > div > p {
            border: 2px solid var(--color-gray);
            border-radius: 1rem;
            padding: 1rem;
            color: white;
        }

        #academic > div { padding-right: var(--side-padding); }
        #academic h1 { color: var(--color-theme); }
        #academic h2 { color: var(--color-theme-light); }

        @media screen and (max-width: 60rem) {
            #opportunity > div { padding: var(--side-padding); }
            #academic > div { padding: var(--side-padding); }
        }

