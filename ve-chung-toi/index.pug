extend /layout/standard

append head
    link(rel="stylesheet", href="/asset/style/timeline.css")
    style.
        .h-with-icon {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }
        .h-with-icon * { flex: 1 0 10rem;}
        .h-with-icon img { height: 5rem; }

        #main-ideas {
            gap: var(--side-padding);
            margin: var(--nav-height) 0;
        }
        #main-ideas > div {
            background-color: var(--color-theme);
            padding: 1rem;
            color: white;
        }
        #main-ideas p {
            margin: 0;
            color: white;
        }

        #values {
            display: flex;
            flex-wrap: wrap;
            padding: 0;
        }
        #values .sticky {
            flex: 1 0 20rem;
            text-align: center;
            background-image:
                linear-gradient(to right, #0055ffe0, #0055ffe0),
                url(/asset/image/core_values.jpg);
            padding: var(--side-padding);
        }
        #values aside {
            position: sticky;
            top: 5rem; left: 0;
        }
        #values aside h1,
        #values aside h3 { color: white;}
        #values aside h2 { color: var(--color-light); }
        #values .float {
            flex: 40rem;
            padding: 3rem;
            padding-right: var(--side-padding);
            background-color: var(--color-gray);
        }
        #values .float details {
            padding: 1rem;
        }
        #values .float details[open] {
            border: 2px solid var(--color-theme);
            border-radius: var(--border-radius);
        }
        #values .float h1 { color: var(--color-theme); }
        #values .float summary { color: var(--color-bright); }

        .boxItem {
            background-color: var(--color-theme);
            height: 20rem;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem;
        }
        .boxItem p {
            height: min-content;
            font-size: 1.5rem;
            line-height: 150%;
            text-align: center;
            color: white;
        }

