extend /layout/standard

append head
    style.
        #values {
            display: flex;
            padding: 0;
        }
        #values .sticky {
            flex: 50%;
            text-align: center;
            background-image:
                linear-gradient(to right, #0055ffe0, #0055ffe0),
                url(/asset/image/core_values.jpg);
            padding: var(--side-padding);
        }
        #values aside {
            position: sticky;
            top: 5rem; left: 0;
        }
        #values aside h1,
        #values aside h3 { color: white;}
        #values aside h2 { color: var(--color-light); }
        #values .float {
            flex: 77%;
            padding: 3rem;
            padding-right: var(--side-padding);
            background-color: var(--color-gray);
        }
        #values .float h1 { color: var(--color-theme); }
        #values .float summary { color: var(--color-bright); }
        #values details summary {
            list-style-type: none;
            width: 100%;
        }
        #values details summary::after {
            content: '◀';
            position: absolute;
            right: var(--side-padding);
        }
        #values details[open] summary::after {
            content: '▼';
        }

        .boxItem {
            background-color: var(--color-theme);
            height: 20rem;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem;
        }
        .boxItem p {
            height: min-content;
            font-size: 2rem;
            text-align: center;
            color: white;
        }

