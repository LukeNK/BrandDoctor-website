append scripts
    script.
        //- https://docs.google.com/forms/d/e/1FAIpQLSfkwYE3ftGx2fwtIQMwdQEnTuL2Cl6QIrFDJ7OpkFlgSeL4Xg/viewform?usp=pp_url&entry.1061795165=Name&entry.1385511241=Company&entry.1872327793=Email@email.ca&entry.0236148131=09&entry.1402602297=test

        // map between URL param and the filled field
        const map = {
            "1061795165": "name",
            "1385511241": "company",
            "1872327793": "email",
            "0236148131": "tel",
            "1402602297": "text"
        }

        function contactSubmit() {
            let params = new URLSearchParams();
            for (const key in map)
                params.append(
                    'entry.' + key,
                    document.getElementById(map[key]).value
                );

            window.location.href =
                'https://docs.google.com/forms/d/e/1FAIpQLSfkwYE3ftGx2fwtIQMwdQEnTuL2Cl6QIrFDJ7OpkFlgSeL4Xg/viewform?'
                + params.toString();
        }
