extend /layout/standard

append head
    style.
        #form {
            display: flex;
            flex-wrap: wrap-reverse;
            padding: 0;
        }
        #form-pic {
            flex: 1 1 20rem;
            display: flex;
            align-items: end;
            padding-left: var(--side-padding);
            padding-right: 1rem;
            padding-bottom: var(--nav-height);
            background-image: url(/asset/image/contact.jpg);
        }
        #form-pic p {
            color: white;
            font-size: 0.75rem;
            line-height: 1rem;
        }
        #form-form {
            flex: 2 1 50rem;
            padding: var(--nav-height) 10%;
            text-align: center;
            background-color: var(--color-gray);
        }
        #form-form form {
            max-width: 25rem;
            margin: 0 auto;
        }
        #form-form h1 { color: var(--color-theme); }

        #FAQ {
            height: 10rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image:
                linear-gradient(to left, #0055ffe0, #0055ffe0),
                url(/asset/image/banner_bg.jpg);
            color: var(--color-bright);
        }

        .close-details details summary { padding: 3rem 0; }
        .close-details details[open] { margin: 3rem 0; }
        .close-details details[open] summary { padding: 0; }
        .close-details hr { margin: 1rem 0; }

